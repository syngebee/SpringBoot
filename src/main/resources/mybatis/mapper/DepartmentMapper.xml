<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.itheima.springboot.dao.DepartmentDao">

    <select id="getDepratments" resultType="com.itheima.springboot.pojo.Department">
        SELECT * FROM department
    </select>

    <select id="getDepartmentById" resultType="com.itheima.springboot.pojo.Department">
        SELECT * FROM department where id=#{id}
    </select>

</mapper>